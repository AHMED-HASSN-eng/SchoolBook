                </div>
                <hr>
                <div class="title"> اختر المرحلة الدراسية و السنة الدراسية</div>
                <div id="stage-level">
                    <div class="box">
                        <label>اختر المرحلة الدراسية :</label>
                        <div class="stage">
                            <div class="primary-stage">
                                <input type="radio" name="stage" value="الابتدائى" id="primary-stage">
                                <label for="primary-stage">المرحلة الابتدائية </label>
                            </div>
                            <div class="middle-stage">
                                <input type="radio" name="stage" value="الاعدادى" id="middle-stage">
                                <label for="middle-stage">المرحلة الاعدادي </label>
                            </div>
                            <div class="high-stage">
                                <input type="radio" name="stage" value="الثانوى" id="high-stage">
                                <label for="high-stage">المرحلة الثانوية </label>
                                <ul class="hidden" id="department">
                                    <li class="first-high-stage">
                                        <input type="radio" name="department" value="first-high-stage" id="first-high-stage">
                                        <label for="first-high-stage">عام</label>
                                    </li>
                                    <li class="scientific-department">
                                        <input type="radio" name="department" value="scientific-department" id="scientific-department">
                                        <label for="scientific-department">القسم العلمي</label>
                                    </li>
                                    <li class="literary-department">
                                        <input type="radio" name="department" value="literary-department" id="literary-department">
                                        <label for="literary-department">القسم الادبي</label>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="box">
                        <label>السنة الدراسية :</label>
                        <select name="vmstudyear" id="primary-level">
                            <option value="">اختر السنة الدراسية</option>
                            <option value="الاول">الاولي</option>
                            <option value="الثاني">الثانية</option>
                            <option value="الثالث">الثالثة</option>
                            <option value="الرابع">الرابعة</option>
                            <option value="الخامس">الخامسة</option>
                            <option value="السادس">السادسة</option>
                        </select>
                        <select name="vmstudyear" id="mid-high-level" class="hidden">
                            <option value="">اختر السنة الدراسية</option>
                            <option value="الاول">الاولي</option>
                            <option value="الثاني">الثانية</option>
                            <option value="الثالث">الثالثة</option>
                        </select>
                    </div>
                </div>
                <hr>
                <div class="title">اختر الترم و المادة</div>
                <div id="semester-subject">
                    <div class="box">
                        <label>الترم الدراسي :</label>
                        <select name="Semseter" id="semester" >
                            <option value="">اختر الترم الدراسي </option>
                            <option value="1">الترم الاول</option>
                            <option value="2">الترم الثاني</option>
                        </select>
                    </div>
                    <div class="box">
                        <label>المادة :</label>
                        <select name="Subject" id="primary-middle-subject">
                            <option value="اللغة العربية">اللغة العربية</option>
                            <option value="الرياضيات">الرياضيات</option>
                            <option value="العلوم">العلوم</option>
                            <option value="الدراسات الاجتماعية">الدراسات الاجتماعية</option>
                            <option value="اللغة الإنجليزية">اللغة الإنجليزية</option>
                        </select>
                        <select name="Subject" id="first-grade-subjects" class="hidden">
                            <option value="">اختر مادة</option>
                            <option value="اللغة العربية">اللغة العربية</option>
                            <option value="اللغة الإنجليزية">اللغة الإنجليزية</option>
                            <option value="الرياضيات">الرياضيات</option>
                            <option value="التاريخ">التاريخ</option>
                            <option value="الجغرافيا">الجغرافيا</option>
                            <option value="الفيزياء">الفيزياء</option>
                            <option value="الكيمياء">الكيمياء</option>
                            <option value="الأحياء">الأحياء</option>
                            <option value="علم الاجتماع">علم الاجتماع</option>
                            <option value="الفلسفة">الفلسفة</option>
                            <option value="علم النفس">علم النفس</option>
                        </select>
                        <select name="Subject" id="science-stream-subjects" class="hidden">
                            <option value="">اختر مادة</option>
                            <option value="اللغة العربية">اللغة العربية</option>
                            <option value="اللغة الإنجليزية">اللغة الإنجليزية</option>
