                            <option value="الكيمياء">الكيمياء</option>
                            <option value="الأحياء">الأحياء</option>
                            <option value="الجيولوجيا">الجيولوجيا</option>
                            <option value="الإحصاء">الإحصاء</option>
                            <option value="التفاضل والتكامل">التفاضل والتكامل</option>
                        </select>
                        <select name ="Subject" id="arts-stream-subjects" class="hidden">
                            <option value="">اختر مادة</option>
                            <option value="اللغة العربية">اللغة العربية</option>
                            <option value="اللغة الإنجليزية">اللغة الإنجليزية</option>
                            <option value="التاريخ">التاريخ</option>
                            <option value="الجغرافيا">الجغرافيا</option>
                            <option value="علم الاجتماع">علم الاجتماع</option>
                            <option value="الفلسفة">الفلسفة</option>
                            <option value="علم النفس">علم النفس</option>
                            <option value="الاقتصاد">الاقتصاد</option>
                        </select>
                    </div>
                </div>
               
                <hr>
                  <div class="title">سعر الكتاب</div>
                  <div id="name-subject">
                    <div class="box">
                      <label for="book-price">سعر الكتاب :</label>
                        <input name="price" type="number" />
                    </div>
